#app
    blockquote
        p + p
            margin-top -1em

    ul,
    ol
        blockquote
            border-left unset
            padding-left 1.2em
            margin unset

            p
                position relative
                margin unset
                
            p::before
                position absolute
                left -2.1em
                top 0
                bottom 0
                content '>'
                font-size 0.5em
                vertical-align text-bottom
                font-weight bold
                line-height 3